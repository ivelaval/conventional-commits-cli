{
  "name": "@vennet/gitcook",
  "version": "0.6.3",
  "description": "CLI tool for git actions",
  "type": "module",
  "main": "./dist/index.js",
  "keywords": [
    "cli",
    "git",
    "conventional-commits",
    "nodejs"
  ],
  "author": "Ivan Avila <ivelaval@gmail.com> (http://ivandev.com/)",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vennet-developers/gitcook.git"
  },
  "bugs": {
    "url": "https://github.com/vennet-developers/gitcook/issues"
  },
  "homepage": "https://github.com/vennet-developers/gitcook#readme",
  "bin": {
    "gcook": "./dist/index.js"
  },
  "scripts": {
    "dev": "rm -rf dist && tsc -w",
    "build": "rm -rf dist && tsc",
    "test": "echo 'Pending to implement'",
    "lint:apply": "biome lint --apply src/*",
    "lint": "biome check --apply src/*",
    "format": "biome format --write src/*",
    "release": "standard-version",
    "pkg:status": "changeset status --since=main",
    "pkg:next:enter": "changeset pre enter next",
    "pkg:next:exit": "changeset pre exit next",
    "pkg:add": "changeset add",
    "pkg:version": "changeset version",
    "pkg:version:dev": "changeset version --snapshot dev",
    "pkg:release:dev": "changeset publish --tag dev",
    "pkg:release": "changeset publish",
    "pkg:link": "(pnpm --global unlink @vennet/gitcook || true) && chmod +x ./dist/index.js && pnpm --global link",
    "pkg:unlink": "pnpm --global unlink @vennet/gitcook"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@changesets/cli": "^2.27.1",
    "@types/cli-box": "^6.0.4",
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.12.7",
    "@types/update-notifier": "^6.0.8",
    "standard-version": "^9.5.0",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@elfiner/inquirer-search-list": "^1.2.8",
    "chalk": "^5.3.0",
    "cli-box": "^6.0.10",
    "commander": "^12.0.0",
    "figlet": "^1.7.0",
    "inquirer": "^9.2.19",
    "inquirer-interrupted-prompt": "^3.0.0",
    "node-emoji": "^2.1.3",
    "update-notifier": "^7.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.12.2"
  },
  "volta": {
    "node": "20.12.2"
  }
}
